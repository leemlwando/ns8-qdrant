#

# If the control reaches this step, the service can be enabled and started

# Ensure the smarthost environment file exists
touch smarthost.env

# Ensure directories exist
mkdir -p data snapshots config

# Enable and start the qdrant service
systemctl --user enable --now qdrant.service

echo "Qdrant service enabled and started"
