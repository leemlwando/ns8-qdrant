{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "configure-module input",
    "$id": "http://schema.nethserver.org/ns8-qdrant/configure-module-input.json",
    "description": "Configure qdrant",
    "type": "object",
    "properties": {
        "ApiKey": {
            "type": "string",
            "description": "Qdrant API Key"
        },
        "EnableWebUI": {
            "type": "boolean",
            "description": "Enable Qdrant Web Console",
            "default": true
        },
        "HttpsEnabled": {
            "type": "boolean", 
            "description": "Enable HTTPS access",
            "default": true
        },        "CustomPath": {
            "type": "string",
            "description": "Custom path for accessing Qdrant (default: /qdrant)",
            "default": "/qdrant"
        },
        "CustomHost": {
            "type": "string",
            "description": "Custom domain for accessing Qdrant (e.g., qdrant.mydomain.co.zm)"
        },
        "LetsEncrypt": {
            "type": "boolean",
            "description": "Enable Let's Encrypt SSL certificate for custom domain",
            "default": false
        }
    }
}