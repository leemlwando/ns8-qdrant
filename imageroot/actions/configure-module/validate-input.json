{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "configure-module input",
    "$id": "http://schema.nethserver.org/qdrant/configure-module-input.json",
    "description": "Configure Qdrant vector database",
    "examples": [
        {
            "http_port": 6333,
            "grpc_port": 6334,
            "api_key": "your-secret-api-key"
        }
    ],
    "type": "object",
    "properties": {
        "http_port": {
            "type": "integer",
            "minimum": 1024,
            "maximum": 65535,
            "default": 6333,
            "description": "HTTP API port for Qdrant"
        },
        "grpc_port": {
            "type": "integer", 
            "minimum": 1024,
            "maximum": 65535,
            "default": 6334,
            "description": "gRPC API port for Qdrant"
        },
        "api_key": {
            "type": "string",
            "description": "Optional API key for authentication"
        }
    }
}