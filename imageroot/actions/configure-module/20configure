import json
import sys
import agent
import agent.tasks
import os

request = json.load(sys.stdin)
api_key = request.get("ApiKey", "")

# Always create the qdrant.env file, even if empty
env_file_path = os.path.join(os.environ["STATE_DIR"], "qdrant.env")
with open(env_file_path, "w") as f:
    if api_key:
        f.write(f"QDRANT__SERVICE__API_KEY={api_key}\n")
    else:
        f.write("# No API key configured\n")

# Configure Traefik to route "/qdrant" path requests to the qdrant service
response = agent.tasks.run(
    agent_id=agent.resolve_agent_id('traefik@node'),
    action='set-route',
    data={
        'instance': os.environ['MODULE_ID'],
        'url':  'http://127.0.0.1:' + os.environ["TCP_PORT"],
        'http2https': False,
        'lets_encrypt': False,
        'path': '/qdrant',
    },
)

# Check if traefik configuration has been successfull
agent.assert_exp(response['exit_code'] == 0)
