{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "get-status output",
    "$id": "http://schema.nethserver.org/qdrant/get-status-output.json",
    "description": "Get Qdrant service status",
    "type": "object",
    "properties": {
        "status": {
            "type": "string",
            "description": "Service active status",
            "enum": ["active", "inactive", "failed", "unknown"]
        },
        "enabled": {
            "type": "string", 
            "description": "Service enabled status",
            "enum": ["enabled", "disabled", "unknown"]
        },
        "http_port": {
            "type": "integer",
            "description": "HTTP API port"
        },
        "grpc_port": {
            "type": "integer",
            "description": "gRPC API port"
        }
    },
    "required": ["status", "enabled", "http_port", "grpc_port"],
    "additionalProperties": false
}
