#!/usr/bin/env python3

import json
import sys
import subprocess

status = {
    "qdrant_service_status": "unknown"
}

try:
    result = subprocess.run(["systemctl", "--user", "is-active", "qdrant.service"], capture_output=True, text=True)
    status["qdrant_service_status"] = result.stdout.strip()
except FileNotFoundError:
    status["qdrant_service_status"] = "systemctl not found"

json.dump(status, fp=sys.stdout)
