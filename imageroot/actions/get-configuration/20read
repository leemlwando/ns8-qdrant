#
# Read configuration
#

import os
import sys
import json
import agent

# Prepare return variable
config = {}

# Read current configuration from the environment file
config["host"] = os.getenv("QDRANT_HOST", "")
config["path"] = os.getenv("QDRANT_PATH", "")
config["http2https"] = os.getenv("QDRANT_HTTP2HTTPS") == "True"
config["lets_encrypt"] = os.getenv("QDRANT_LETS_ENCRYPT") == "True"
config["port"] = int(os.getenv("QDRANT_PORT", "6333"))
config["api_key"] = os.getenv("QDRANT_API_KEY", "")
config["collection_size_limit"] = int(os.getenv("QDRANT_COLLECTION_SIZE_LIMIT", "10000"))
config["enable_cors"] = os.getenv("QDRANT_ENABLE_CORS", "true").lower() == "true"

# Try to read from config.json if it exists
try:
    with open('config.json', 'r') as cf:
        saved_config = json.load(cf)
        # Merge saved configuration with environment variables
        config.update(saved_config)
except FileNotFoundError:
    pass
except json.JSONDecodeError:
    pass

# Dump the configuration to stdout
json.dump(config, fp=sys.stdout)
