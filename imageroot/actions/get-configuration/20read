#!/usr/bin/env python3

import json
import sys
import agent

config = {}

# Read current configuration from environment
config['host'] = agent.get_env('QDRANT_HOST', '')
config['path'] = agent.get_env('QDRANT_PATH', '')
config['lets_encrypt'] = agent.get_env('QDRANT_LETS_ENCRYPT', 'false') == 'true'
config['http2https'] = agent.get_env('QDRANT_HTTP2HTTPS', 'false') == 'true'

json.dump(config, fp=sys.stdout)
